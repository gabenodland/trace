{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@trace/core": [
        "packages/core/src"
      ],
      "@trace/core/*": [
        "packages/core/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/mobile"
    }
  ],
  "extends": "expo/tsconfig.base"
}
